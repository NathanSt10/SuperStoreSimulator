      <div class="payment-buttons">
        <form action="/thank/<%= memberid%>" method="POST">
          <button class="create-btn" type="submit">PAY w/ Card</button>
        </form>
        <form action="/thank/<%= memberid%>" method="POST">
          <button class="create-btn" type="submit">PAY w/ Check</button>
        </form>
        <form action="/thank/<%= memberid%>" method="POST">
          <button class="create-btn" type="submit">PAY w/ Cash</button>
        </form>
      </div>

      <h2>Checkout</h2>
      
      <table class="retro-table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
            <% if (checkout && checkout.length > 0) { %>
              <% checkout.forEach(item => { %>
                <tr>
                  <td><%= item.product %></td>
                  <td><%= item.product_quantity %></td>
                  <td>$<%= item.price %></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="3">Empty cart</td></tr>
            <% } %>
          </tbody>
      </table>

      <button onclick="history.back()">Go Back</button>
      <!-- <a href="/"><button>Go Back</button></a> -->

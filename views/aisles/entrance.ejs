<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Super Shopping Simulator</title>
  <link rel="stylesheet" href="http://localhost:3000/styles.css">
</head>
<body>
  <div class="window">
    <div class="title-bar">
      <span class="title">
        <span class="s">S</span><span class="u">u</span><span class="p">p</span><span class="e">e</span><span class="r">r</span>
        <span class="s">S</span><span class="u">h</span><span class="p">o</span><span class="e">p</span><span class="r">p</span><span class="s">i</span><span class="u">n</span><span class="p">g</span>
        <span class="s">S</span><span class="u">i</span><span class="p">m</span><span class="e">u</span><span class="r">l</span><span class="s">a</span><span class="u">t</span><span class="p">o</span><span class="e">r</span>
      </span>
      <div class="icon-button-group">
        <button id="memberButton" class="icon-button">
            <img src="/cart_white.png" alt="Cart" style="width: 25px; height: 25px;">
        </button>
        <a href="/profile/<%= memberid%>">
          <button class="icon-button">
            <img src="/human_white.png" alt="Account" style="width: 25px; height: 25px;">
        </button>
        </a>
      </div>
    </div>

    <!-- The Modal -->
    <div id="memberModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>

            <h2>Cart</h2>

            <ul class="cart-list">
              <% if (cart && cart.length > 0) { %>                 
                <% cart.forEach(item => { %>
                  <li class="cart-item">
                    <span class="item-name"><%= item.product %></span>
                    <span class="item-qty">Qty: <%= item.product_quantity %></span>
                  </li>
                <% }); %>
              <% } else { %>  
                <li>No items found</li>
              <% } %>
            </ul>

        </div>
    </div>
    
    <div class="content">
      <h1>WELCOME TO THE SUPERMARKET</h1>

      
      <a href="/checkout/<%= memberid%>"><button class="create-btn" type="submit">Proceed to Checkout</button></a>
      <a href="/office/<%= memberid%>"><button class="create-btn" type="submit">Go to Office</button></a>
      <a href="/bakery/<%= memberid%>"><button class="create-btn">Bakery</button></a>

      <h2>Produce Aisle</h2>
      
      <div class="table-container">
      <table class="retro-table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Add</th>
          </tr>
        </thead>
        <tbody>
            <% if (produce && produce.length > 0) { %>
              <% produce.forEach(product => { %>
              <tr>
                <td><%= product.name %></td>
                <td>$<%= product.price %></td>
                <td><%= product.quantity %></td>
                <td><%= product.brand %></td>
                <td><%= product.category %></td>
                <td>
                  <form action="/entrance/add/<%= memberid%>" method="POST" style="margin:0;">
                    <input type="hidden" name="productName" value="<%= product.name %>">
                    <button class="create-btn" type="submit" style="padding: 2px 6px; font-size: 12px;">+</button>
                  </form>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="3">No produce available</td></tr>
            <% } %>
          </tbody>
      </table>
    </div>

      <a href="/"><button>Go Back</button></a>
    </div>
  </div>
  <script src="/modal.js" defer></script>
</body>
</html>
